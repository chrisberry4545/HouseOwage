@model HouseOwage.Models.Payment
@{
    ViewBag.Title = "Create Payment";
    ViewBag.InputClass = "form-control";
}

<div class="row">
    <h1>Register Payment</h1>
</div>

<div class="row">

    @using (Html.BeginForm("Create", "Payment", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.PaymentRequest.PaymentRequestId)

        <div class="form-group">
            @Html.DisplayNameFor(m => m.Amount)
            @Html.TextBoxFor(m => m.Amount, new { @class = ViewBag.InputClass, type = "number" })
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Register Payment</button>
        </div>

    }

</div>